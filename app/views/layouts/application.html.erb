<!DOCTYPE html>
<html>
  <head>
    <title>Bookers</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
<!-- 
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script> -->
  </head>
 

  <body>
<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <div class='nav navbar-nav navbar-brand navbar-left' >
      <span>Bookers</span>
</div>
<table class="nav navbar-nav navbar-brand navbar-right">

        
          <tr>
            <% if user_signed_in? %>
            <th><span class="glyphicon glyphicon-home" aria-hidden="true"></span>
              <%=link_to 'Home', user_path(current_user)%></th>
            <th><span class="glyphicon glyphicon-user" aria-hidden="true"></span>
              <%=link_to 'Users', users_path%></th>
            <th><span class="glyphicon glyphicon-book" aria-hidden="true"></span>
              <%= link_to 'Books', books_path%></th>
            <th><span class="glyphicon glyphicon-log-out" aria-hidden="true"></span>
              <%= link_to "logout", destroy_user_session_path, method: :delete %></th>
            <% else %>

            <th><span class="glyphicon glyphicon-home home" href="/"></span>
              <%=link_to 'Home', root_path %></th>
            <th><span class="glyphicon glyphicon-link" aria-hidden="true"></span>
            <%= link_to 'About', home_about_path %></th>
            <th><span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
              <%= link_to "Sign up", new_user_registration_path %></th>
            <th><span class="glyphicon glyphicon-log-in" aria-hidden="true"></span>
              <%= link_to "login", new_user_session_path %></th>
              <% end %>

           </tr>

        
      </table>

</div>
  </header>
    <div class="body">
    <div class="container">
      <%= flash[:notice] %>
      <%= yield %>
    </div>


   <footer>
  <div class='container'>
    <div class='row'>
      <div class='col-xs-3 col-xs-offset-9'>
        <p>CopyRight Infratop.inc</p>
      </div>
    </div>
  </div>
</footer>
</body>
</html>
