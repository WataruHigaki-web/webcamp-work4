<div class="row">
	<div class="col-xs-3">
		<%= render 'users/list', user: @user %>
		<%= render 'users/list2', book: @book %>
	</div>

<div class="col-xs-9">
<h2>Users</h2>
<table class='table table-hover table-inverse'>
	<thead>
	
		<tr>
			<th scope="col">image</th>
			<th scope="col">name</th>
			
		</tr>
	</thead>
	<tbody>
	<% @users.each do |user| %>
	<tr>
		<th><%= attachment_image_tag @user, :profile_image, :fill, 50,50, fallback: "no_image.jpg" %></th>
		<th><%= user.name %></th>
		<th><%= link_to 'Show', user_path(user) %></th>
	</tr>
	<% end %>
</tbody>
</table>
</div>
</div>