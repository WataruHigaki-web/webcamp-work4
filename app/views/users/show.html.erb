<div class="row">
	<div class="col-md-4">
		<%= render 'users/list', user: @user %>
		<%= render 'users/list2', book: @book %>
	</div>





	<div class="col-md-8">
		<h2>Books</h2>
		<table class="table">
			<thead>

			    <th></th>
				<th scope="col">Title</th>
				<th scope="col">Opinion</th>
			
		</thead>
			<tbody>
		    
				<% @books.each do |book|%>
				<tr>
				<td><%= attachment_image_tag @user, :profile_image, :fill, 50,50, fallback: "no_image.jpg" %> %>
					<%= book.user.name %>
				</td>
				<td><%= book.title %></td> 
			    <td><%= book.body %></td> 
			</tr>
			    <% end %>
			
			</tbody>
		</table>

</div>


