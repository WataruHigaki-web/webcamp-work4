<div class="row">
	<div class="col-xs-3">
		<%= render 'users/list', user: @user %>
		<%= render 'users/list2', book: @book %>
	</div>

	<div class="col-xs-9">
		<h2>Books</h2>
		<table class='table table-hover table-inverse'>
  <thead>
			    <th></th>
				<th scope="col">Title</th>
				<th scope="col">Opinion</th>
		</thead>
			<tbody>
              <% @books.each do |book|%>
				<tr>
				<td><%= attachment_image_tag @user, :profile_image, :fill, 50,50, fallback: "no_image.jpg" %>
				</td>
				<td><%= link_to (book_path(book)) do %>
					<%= book.title %>
					<% end %>
					</td> 
			    <td><%= book.body %></td> 
			</tr>
			    <% end %>
			
			</tbody>
		</table>

</div>


